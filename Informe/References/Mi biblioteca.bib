	number = {3},
	urldate = {2025-11-19},
	journal = {Automation of Technological \& Business Processes / Avtomatizaciâ Tehnologiceskih i Biznes-Processov},
	author = {Popov, R. O. and Gerasimov, V. V.},
	month = jul,
	year = {2025},
	pages = {54},
	file = {Snapshot:files/61/gcd189197235.html:text/html},
}

